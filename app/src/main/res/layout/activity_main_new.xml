<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Smart Keyboard"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activate"
        android:layout_marginTop="19dp"
        android:layout_alignEnd="@+id/button2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llButtons">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="activate"
            android:text="Enable"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/btnSmart" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="select"
            android:text="Select"
            android:layout_above="@+id/editText"
            android:layout_alignEnd="@+id/btnSmart" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sett"
            android:layout_alignBottom="@+id/button"
            android:layout_centerHorizontal="true"
            android:text="Settings" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Text"
        android:inputType="textPersonName"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSmart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart button settings"
        android:layout_centerHorizontal="true" />

</LinearLayout>